@import '../common'

navbar
  display flex
  flex-direction column
  flex-wrap nowrap
  justify-content center
  align-items stretch
  height 4rem
  background-color green
  .navbar
    flex 0 1 auto
    display flex
    flex-direction row
    flex-wrap nowrap
    justify-content space-between
    align-items stretch
    align-content flex-start
    background-color green
    height 4rem
    color yellow
    > a, >span
      flex 0 1 auto
      display flex
      flex direction column
      flex-wrap nowrap
      justify-content center
      align-content center
      padding 5px
      font-size 1.6rem
    .profile-pic
      cursor default
    .mobile-menu-button
      width 3.375rem
      span
        line-height 3.2rem
        font-size 3.2rem
        flex 0 1 auto
    .menu-item-container
      display none
  @media screen and (min-width 768px)
    .mobile-menu-button
      display none
    span
      flex 0 1 auto
      display flex
      flex-direction column
      flex-wrap nowrap
      justify-content center
      align-content center
      border-right 1px solid forestgreen
      font-size 1.6rem
      padding 5px
      text-align center
      a
        color yellow
      a:link
        text-decoration none
      a:visited
        text-decoration none
      a:hover
        text-decoration none
    span:active
      a:active
        color goldenrod
    span:hover
      background-color mediumseagreen
      cursor pointer
      a
        color gold
    span:nth-child(1):hover
      background-color green
      cursor default
    span:last-of-type
      border-right none
