@import '../common'

navbar
  display flex
  flex-direction column
  flex-wrap nowrap
  justify-content center
  align-items stretch
  height 4rem
  width 100%
  //padding 1rem
  background-color green
  .navbar
    flex 0 1 auto
    display flex
    flex-direction row
    flex-wrap nowrap
    justify-content flex-start
    align-items stretch
    align-content flex-start
    background-color green
    height 4rem
    //width 100%
    span
      flex 0 1 auto
      display flex
      flex-direction column
      flex-wrap nowrap
      justify-content center
      align-content center
      border-right 1px solid forestgreen
      font-size 1.6rem
      padding 5px
      text-align center
      a
        color yellow
      a:link
        text-decoration none
      a:visited
        text-decoration none
      a:hover
        color khaki
        text-decoration underline
      a:active
        color white
        text-decoration underline
    span:last-of-type
      border-right none
    span.active
      background-color limegreen
